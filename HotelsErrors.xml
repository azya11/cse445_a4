<?xml version="1.0" encoding="UTF-8"?>
<Hotel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="https://abildamirbekuulu.github.io/cse445_a4/Hotels.xsd">

	<!-- Root element is <Hotel> instead of <Hotels>, 
         so it fails the XSD (the root should be <Hotels>). 
         Additional nested <Hotel> tags also have issues. -->

	<Hotel Rating="4.1">
		<Name>Renaissance Scottsdale</Name>
		<Phone>480-123-4567</Phone>
		<Address NearstAirport="Scottsdale Airport">
			<Number>101</Number>
			<Street>East McDowell Rd</Street>
			<City>Scottsdale</City>
			<State>AZ</State>
			<!-- Zip is missing -->
		</Address>
	</Hotel>

	<Hotel Rating="4.5">
		<Name>Hyatt Place Phoenix</Name>
		<!-- Phone is missing entirely, which is allowed by XSD only 
             if <Phone> is 0..unbounded? Actually, the XSD says 
             <Phone> has minOccurs=1 by default, so it fails. -->
		<Address NearstAirport="Phoenix Sky Harbor">
			<Number>202</Number>
			<Street>North 3rd Ave</Street>
			<City>Phoenix</City>
			<State>AZ</State>
			<Zip>85004</Zip>
		</Address>
	</Hotel>

	<Hotel>
		<!-- Missing the required 'Rating' attribute -->
		<Name>Sheraton Grand</Name>
		<Phone>480-567-8901</Phone>
		<Address>
			<!-- Missing the required 'NearstAirport' attribute -->
			<Number>303</Number>
			<Street>South Mountain Pkwy</Street>
			<City>Phoenix</City>
			<State>AZ</State>
			<Zip>85015</Zip>
		</Address>
	</Hotel>

	<Hotel Rating="4.2">
		<Name>Embassy Suites</Name>
		<Phone>480-678-9012</Phone>
		<!-- Address is missing entirely, which fails the XSD 
             since Address is mandatory -->
	</Hotel>

	<Hotel Rating="4.6">
		<!-- Duplicate Name element, 
             or some invalid content. -->
		<Name>Omni Scottsdale Resort</Name>
		<Name>Omni Resort Duplicate</Name>
		<Phone>480-789-0123</Phone>
		<Address NearstAirport="Scottsdale Airport">
			<Number>505</Number>
			<Street>West Camelback Rd</Street>
			<City>Scottsdale</City>
			<State>AZ</State>
			<Zip>85257</Zip>
		</Address>
	</Hotel>

</Hotel>
